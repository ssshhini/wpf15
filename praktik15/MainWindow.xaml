<Window x:Class="Wpf_Math_practice15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Math_practice15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="TaskSelector" Width="150" Margin="0,0,10,0"/>
            <Button x:Name="SolveButton" Content="Решить" Width="100" Click="SolveButton_Click"/>
        </StackPanel>

        <TextBox x:Name="ResultBox" Grid.Row="1" Margin="10" 
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" FontFamily="Consolas" FontSize="14"/>
    </Grid>
</Window>
